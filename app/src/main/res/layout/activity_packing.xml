<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    android:orientation="vertical"
    tools:context=".PackingActivity">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10sp"
        android:backgroundTint="#FCFC94"
        android:text="@string/btnBack"
        android:textColor="#6c6868"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etClothes"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="@string/etClothes"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="#6c6868"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etToiletries"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="@string/etToiletries"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="#6c6868"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etShoes"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="@string/etShoes"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="#6c6868"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etDocuments"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="@string/etDocuments"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="#6c6868"
            android:textSize="24sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/etTravelDays"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/etTravelDays"
        android:inputType="numberDecimal"
        android:textColorHint="#6c6868"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnDisplay"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10sp"
        android:backgroundTint="#FCFC94"
        android:text="@string/btnDisplay"
        android:textColor="#6c6868"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvClothes"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvToiletries"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:textAlignment="center"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvShoes"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvDocuments"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:textAlignment="center"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10sp"
        android:backgroundTint="#FCFC94"
        android:text="@string/btnClear"
        android:textColor="#6c6868"
        android:textSize="20sp" />

</LinearLayout>